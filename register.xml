<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blue_bg" xmlns:tools="http://schemas.android.com/tools" tools:context=".SpinnerActivity">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5px" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="用户名"
            android:textSize="@dimen/text_size" />

    	<EditText
    	    android:id="@+id/register_name"
    	    android:layout_width="0dp"
    	    android:layout_height="fill_parent"
    	    android:layout_weight="2"
    	    android:background="#FFFFFF" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5px" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="学号"
            android:textSize="@dimen/text_size" />

    	<EditText
    	    android:id="@+id/register_number"
    	    android:layout_width="0dp"
    	    android:layout_height="fill_parent"
    	    android:layout_weight="2"
    	    android:background="#FFFFFF" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5px" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="密码"
            android:textSize="@dimen/text_size" />

    	<EditText
    	    android:id="@+id/register_pwd"
    	    android:layout_width="0dp"
    	    android:layout_height="fill_parent"
    	    android:layout_weight="2"
    	    android:background="#FFFFFF" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5px" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="确认密码"
            android:textSize="@dimen/text_size" />

    	<EditText
    	    android:id="@+id/register_cfpwd"
    	    android:layout_width="0dp"
    	    android:layout_height="fill_parent"
    	    android:layout_weight="2"
    	    android:background="#FFFFFF" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5px" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="性别"
            android:textSize="@dimen/text_size" />

        <Spinner
            android:id="@+id/Spinner01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:entries="@array/spingarr" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5px" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="出生日期"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/date_time"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:ems="10" >

            <requestFocus />
        </EditText>
 
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5px" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="联系方式"
            android:textSize="@dimen/text_size" />

    	<EditText
    	    android:id="@+id/register_tel"
    	    android:layout_width="0dp"
    	    android:layout_height="fill_parent"
    	    android:layout_weight="2"
    	    android:background="#FFFFFF" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5px" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="学校"
            android:textSize="@dimen/text_size" />

    	<EditText
    	    android:id="@+id/register_school"
    	    android:layout_width="0dp"
    	    android:layout_height="fill_parent"
    	    android:layout_weight="2"
    	    android:background="#FFFFFF" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:padding="5px" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="简介"
            android:textSize="@dimen/text_size" />

    	<EditText
    	    android:id="@+id/register_info"
    	    android:layout_width="0dp"
    	    android:layout_height="fill_parent"
    	    android:layout_weight="2"
    	    android:background="#FFFFFF" />

    </LinearLayout>
    
    <Button
        android:id="@+id/btn_cfregister"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="确认注册" />

</LinearLayout>
